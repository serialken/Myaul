                    <p class="faqP paddingTopFaq col-sm-10 col-xs-12">
                        {{ val|raw }}
                    </p>
                </div>
            </div>
            {% set j = j+1 %}
        {% endif %}

    {% endfor %}

    </div>


{% set i = i+1 %}
{% endfor %}
