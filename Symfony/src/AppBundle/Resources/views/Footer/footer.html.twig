        <div class="container paddingTop">
            <div class="row" >
                <div class="col-sm-4 col-xs-12">

                    <p class="pictoFooter"><a href="{{ path('appbundle_homepage') }}"><img src="/Visuels/Footer/LOGO_FOOTER_ACENSI.png" alt="Acensi University League" border="0"/></a></p>

                    <div class="paddingTop2">

                        <ul class="nav navbar-nav marginTop">
