{% set cpt = game_tournament_selection | length %}
{#Set Label for dev cup default return on the homepage#}
{% set label ='homepage'%}
{% for j in 0..(cpt-1) %}
    {% if game_tournament_selection[j].isDevCup() == true %}
        {% set label = game_tournament_selection[j].getGame()  %}
    {% endif %}
    {% set j=j+1 %}
{% endfor %}

{% block footer %}
